{
    "compilerOptions": {
        "target":"ES6",
        "module": "CommonJS",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false
    },
    "include": ["src/**/*.ts", ".env"],
    "exclude": ["node_modules"],
}